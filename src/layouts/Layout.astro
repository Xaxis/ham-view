	// Filter out expected iframe security warnings to reduce console noise
	const originalConsoleWarn = console.warn;
	console.warn = function(...args) {
		const message = args.join(' ');
		// Filter out expected iframe security warnings
		if (message.includes('allow-scripts and allow-same-origin') ||
			message.includes('escape its sandboxing') ||
			message.includes('Unsafe attempt to initiate navigation')) {
			return; // Don't log these expected warnings
		}
		originalConsoleWarn.apply(console, args);
	};

