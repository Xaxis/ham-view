---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - Ham View">
	<div class="error-page">
		<div class="error-content">
			<img src="/logo.png" alt="Ham View" class="error-logo" />
			<h1 class="error-code">404</h1>
			<p class="error-description">
				The page you're looking for doesn't exist or has been moved.
			</p>
			<div class="error-actions">
				<a href="/" class="btn btn-primary">
					<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
						<polyline points="9,22 9,12 15,12 15,22"/>
					</svg>
					Go Home
				</a>
				<button onclick="history.back()" class="btn btn-secondary">
					<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
						<polyline points="15,18 9,12 15,6"/>
					</svg>
					Go Back
				</button>
			</div>
		</div>
		
		<div class="error-background">
			<div class="floating-element"></div>
			<div class="floating-element"></div>
			<div class="floating-element"></div>
		</div>

		<footer class="app-footer">
			<div class="footer-content">
				<p>&copy; 2024 Ham View. All rights reserved.</p>
			</div>
		</footer>
	</div>
</Layout>

<style>
	.error-page {
		width: 100vw;
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--bg-canvas);
		position: relative;
		overflow: hidden;
	}

	.error-content {
		text-align: center;
		max-width: 500px;
		padding: var(--space-8);
		background: var(--bg-elevated);
		border: 1px solid var(--border-primary);
		border-radius: var(--radius-2xl);
		box-shadow: var(--shadow-2xl);
		backdrop-filter: blur(20px);
		z-index: 10;
		position: relative;
	}

	.error-logo {
		height: 100px;
		width: auto;
		margin-bottom: var(--space-6);
		opacity: 0.9;
	}

	.error-code {
		font-size: 6rem;
		font-weight: 800;
		margin: 0;
		background: linear-gradient(135deg, var(--primary) 0%, var(--primary-hover) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		line-height: 1;
		margin-bottom: var(--space-4);
	}

	.error-title {
		font-size: var(--text-2xl);
		font-weight: 700;
		color: var(--text-primary);
		margin: 0 0 var(--space-4) 0;
		letter-spacing: -0.02em;
	}

	.error-description {
		font-size: var(--text-lg);
		color: var(--text-secondary);
		margin: 0 0 var(--space-8) 0;
		line-height: 1.6;
	}

	.error-actions {
		display: flex;
		gap: var(--space-4);
		justify-content: center;
		flex-wrap: wrap;
	}

	.error-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		pointer-events: none;
	}

	.floating-element {
		position: absolute;
		width: 200px;
		height: 200px;
		border-radius: 50%;
		background: linear-gradient(135deg, var(--primary-50) 0%, transparent 70%);
		animation: float 6s ease-in-out infinite;
	}

	.floating-element:nth-child(1) {
		top: 10%;
		left: 10%;
		animation-delay: 0s;
	}

	.floating-element:nth-child(2) {
		top: 60%;
		right: 10%;
		animation-delay: 2s;
	}

	.floating-element:nth-child(3) {
		bottom: 10%;
		left: 50%;
		animation-delay: 4s;
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0px) scale(1);
			opacity: 0.3;
		}
		50% {
			transform: translateY(-20px) scale(1.1);
			opacity: 0.6;
		}
	}

	[data-theme="dark"] .floating-element {
		background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
	}

	/* Responsive */
	@media (max-width: 768px) {
		.error-content {
			margin: var(--space-4);
			padding: var(--space-6);
		}

		.error-code {
			font-size: 4rem;
		}

		.error-title {
			font-size: var(--text-xl);
		}

		.error-description {
			font-size: var(--text-base);
		}

		.error-actions {
			flex-direction: column;
		}

		.error-logo {
			height: 80px;
			width: auto;
		}
	}
</style>
